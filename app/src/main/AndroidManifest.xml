<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.termtracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TermTracker">
        <receiver
            android:name=".app.UI.MyReceiver"
            android:enabled="true"
            android:exported="true"></receiver>

        <activity
            android:name=".app.UI.AssessmentDetail"
            android:exported="false"
            android:label="Assessment Details" />
        <activity
            android:name=".app.UI.AddAssessment"
            android:exported="false"
            android:label="Add/Edit Assessment" />
        <activity
            android:name=".app.UI.AssessmentList"
            android:exported="false"
            android:label="Course Details" />
        <activity
            android:name=".app.UI.AddCourse"
            android:exported="false"
            android:label="Add/Edit Course" />
        <activity
            android:name=".app.UI.CourseList"
            android:exported="false"
            android:label="Term Details" />
        <activity
            android:name=".app.UI.AddTerm"
            android:exported="false"
            android:label="Add/Edit Term" />
        <activity
            android:name=".app.UI.TermList"
            android:exported="false"
            android:label="@string/terms" />
        <activity
            android:name=".app.UI.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>